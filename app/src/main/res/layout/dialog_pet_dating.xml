<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:round="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_root_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle15_ffffff"
        android:orientation="vertical">

        <!--<com.pet.travel.view.imageview.RoundAngleImageView-->
            <!--android:id="@+id/dialog_pet_header"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/margin_180"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@mipmap/menu_bg_2"-->
            <!--round:roundHeight="@dimen/margin_15"-->
            <!--round:roundLeftBottom="false"-->
            <!--round:roundRightBottom="false"-->
            <!--round:roundWidth="@dimen/margin_15" />-->

        <com.pet.travel.view.viewpager.RoundHeaderPagerView
            android:id="@+id/dialog_pet_header"
            android:layout_width="match_parent"
            android:layout_height="180dp">

        </com.pet.travel.view.viewpager.RoundHeaderPagerView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/margin_4"
                        android:text="犬种：" />

                    <TextView
                        android:id="@+id/dialog_pet_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:padding="@dimen/margin_4"
                        android:text="金毛寻回犬" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/margin_4"
                        android:text="姓名：" />

                    <TextView
                        android:id="@+id/dialog_pet_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:padding="@dimen/margin_4"
                        android:text="记忆" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/margin_4"
                        android:text="年龄：" />

                    <TextView
                        android:id="@+id/dialog_pet_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:padding="@dimen/margin_4"
                        android:text="1.6岁" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/margin_4"
                        android:text="性别：" />

                    <TextView
                        android:id="@+id/dialog_pet_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:padding="@dimen/margin_4"
                        android:text="太子" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="@dimen/margin_2"
                        android:text="爱好" />

                    <TextView
                        android:id="@+id/dialog_pet_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/margin_4"
                        android:text="跑步，寻物，游泳，郊游" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="@dimen/margin_2"
                        android:text="描述" />

                    <TextView
                        android:id="@+id/dialog_pet_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/margin_4"
                        android:text="逗逗长着一身洁白上的毛，它有一双乌黑发亮圆圆的眼睛、鼻子扁扁的、嘴巴大大的、耳朵长长的，它的四条腿很短，尾巴翘着象天线，走起路来屁股一扭一扭的，非常可爱。" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>